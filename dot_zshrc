# ZSH_THEME="spaceship"
# SPACESHIP_PROMPT_ASYNC=false
# plugins=(git fzf aws terraform)
# source $ZSH/oh-my-zsh.sh
eval "$(zoxide init zsh)"
source ~/.zshrc_local

alias ghcs="gh copilot suggest"
alias ghce="gh copilot explain"
alias ghprc="gh pr create -f"
